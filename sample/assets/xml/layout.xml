<?xml version="1.0" encoding="utf-8" ?>
<!-- WARNING: the size of the app is set in the NMML file -->
<Layouts>
    <Layout layoutName="default" rows="100,*,50">
        <Row columns="10%,*">
            <Column ref="header" bgColor="0xFF0000">
            </Column>
            <Column ref="menu" bgColor="0x00FF00">
                <Menu type="both" orientation="horizontal" x="50" y="50" width="800" height="80">
                    <Part xOffset="2" yOffset="30">
                        <Button ref="" id="continueButton" type="text" x="400" y="400" scaleX="0.5" scaleY="0.5"/>
                    </Part>
                    <Activity xOffset="2" yOffset="30">
                        <Button ref="" id="continueButton" type="text" x="400" y="400" scaleX="0.5" scaleY="0.5"/>
                    </Activity>
                </Menu>
            </Column>
        </Row>

        <Row ref="main" bgColor="0xFFF000"/>

        <Row ref="footer" bgColor="0x0000FF"/>
    </Layout>

    <Layout layoutName="fullscreen" ref="main"/>

    <Layout layoutName="popUp" rows="100,*,50">
        <Row columns="50%,*">
            <Column ref="header"/>
            <Column ref="menu"/>
        </Row>
        <Row columns="90%, *">
            <Column ref="main"/>
            <Column ref="popUp"/>
        </Row>
        <Row ref="footer"/>
    </Layout>
</Layouts>